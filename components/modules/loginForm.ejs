<h3 class="login-error"></h3>
<form action="/" onsubmit="handleSubmit()" method="POST" id="loginForm">
  <div class="container-fluid login-container">
    <div class="row">
      <div class="col">
        <h2 class="text-white text-center">Login</h2>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label for="username" class="text-white">Username</label>
        <input
          type="email"
          name="username"
          id="username"
          class="form-control"
          placeholder="example@something.com"
          required
        />
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label for="password" class="text-white">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          placeholder="******"
          required
        />
      </div>
    </div>
    <div class="row">
      <div class="col text-end">
        <a href="#" class="text-white">Forgot password?</a>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <button class="btn">
          Login
          <i class="fa-solid fa-right-to-bracket"></i>
        </button>
      </div>
    </div>
    <div class="row">
      <div class="col text-center">
        <a href="/Register" class="text-white">Sign Up</a>
      </div>
    </div>
  </div>
</form>